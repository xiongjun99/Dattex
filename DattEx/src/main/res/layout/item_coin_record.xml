<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.temp.dattex.util.DateFormatter" />

        <variable
            name="dataBean"
            type="com.temp.dattex.bean.CoinRecordBean.RowsBean" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FF282C42"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/color_FFEDEEF2"
            android:textSize="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_amount"
                    android:textColor="@color/color_FFA3A6BF"
                    android:textSize="@dimen/dp_12" />
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态"
                    android:textColor="@color/color_FFA3A6BF"
                    android:textSize="@dimen/dp_12" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="right"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dip"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textColor="@color/color_FFA3A6BF"
                    android:textSize="@dimen/dp_12" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
        <ImageView
            android:src="@mipmap/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_994D5273" />
    </LinearLayout>
</layout>