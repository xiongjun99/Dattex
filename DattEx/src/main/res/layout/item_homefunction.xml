<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_weight="6"
            >

            <TextView
                android:id="@+id/tv_fun_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_help_center"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_fun_info"
                android:layout_below="@+id/tv_fun_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_help_desc"
                android:textColor="@color/color_FFA3A6BF"
                android:textSize="@dimen/dp_10" />
        </RelativeLayout>
           <RelativeLayout
               android:gravity="center"
               android:layout_gravity="center"
               android:layout_weight="4"
               android:layout_width="0dip"
               android:layout_height="wrap_content">
               <ImageView
                   android:padding="@dimen/dp_10"
                   android:id="@+id/iv_fun"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_alignParentRight="true"
                   android:src="@mipmap/icon_help_center" />
           </RelativeLayout>
        <View
            android:layout_gravity="center"
            android:layout_width="0.5dp"
            android:layout_height="60dp"
            android:background="@color/color_4D000000" />

    </LinearLayout>
