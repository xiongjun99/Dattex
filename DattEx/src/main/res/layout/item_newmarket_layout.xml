<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_282C42"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
           android:layout_toLeftOf="@+id/tv_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_gravity="right"
                android:id="@+id/tv_price"
                android:text="点数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="¥"
                    android:textColor="@color/color_FFA3A6BF"
                    android:textSize="12dp" />

                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:id="@+id/tv_cny"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:textColor="@color/color_FFA3A6BF"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_default_bt" />

            <TextView
                android:id="@+id/tv_coinid"
                android:text="交易对"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:singleLine="true"
            android:id="@+id/tv_changes"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_market_item_line" />
    </RelativeLayout>
</LinearLayout>