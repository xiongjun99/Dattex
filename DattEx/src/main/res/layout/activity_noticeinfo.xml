<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1A1C29"
    android:orientation="vertical">

    <com.temp.dattex.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/icon_common_back"
        app:titleText="@string/noticeinfo"
        app:titleTextColor="@color/color_FFFFFFFF" />
<LinearLayout
    android:layout_marginTop="@dimen/dp_1"
    android:background="@color/color_282C42"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/tv_title"
        style="@style/White_TextView24_Style"></TextView>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            style="@style/Auth_TextView_Style"
            ></TextView>
        <TextView
            android:layout_toRightOf="@+id/tv_time"
            android:id="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_20"
            style="@style/Auth_TextView_Style"
            ></TextView>
    </RelativeLayout>
    <WebView
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
</LinearLayout>
</LinearLayout>