<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_FF282C42"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_dialog_title"
    android:layout_marginTop="@dimen/dp_40"
    android:layout_gravity="center_horizontal"
    android:text="@string/isTransferAccounts"
    style="@style/White_TextView_Style"
  ></TextView>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/price"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/TransferAccountsPrice"
            style="@style/White_TextView_Style"
            ></TextView>
        <TextView
            android:text="加载中..."
            android:id="@+id/tv_price"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/price"
            android:layout_gravity="center_horizontal"
            style="@style/Orange_TextView_Style"
            ></TextView>
        <TextView
            android:layout_toRightOf="@+id/tv_price"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="元"
            style="@style/White_TextView_Style"
            ></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_cancel"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/afresh_accounts"
                android:textColor="@color/color_4B8BEB"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_trade_login_background"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/transfer_accounts"
                android:textColor="@color/color_FFFFFFFF"></TextView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>