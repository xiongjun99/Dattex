<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_282C42">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_cancel"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:padding="@dimen/dp_10"
        android:id="@+id/tv_amount"
        style="@style/Blue_TextView_Style"></TextView>
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_99767B99"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_0.5dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp_10"
            android:text="类型"
            style="@style/Auth_TextView16_Style"></TextView>
        <TextView
            android:id="@+id/tv_type"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            style="@style/White_TextView16_Style"></TextView>
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_99767B99"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_0.5dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp_10"
            android:text="状态"
            style="@style/Auth_TextView16_Style"></TextView>
        <TextView
            android:id="@+id/tv_status"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            style="@style/White_TextView16_Style"></TextView>
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_99767B99"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_0.5dp"></View>
    <RelativeLayout
        android:id="@+id/rl_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/addr"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp_10"
            android:text="提币地址"
            style="@style/Auth_TextView16_Style"></TextView>
        <TextView
            android:layout_toRightOf="@+id/addr"
            android:id="@+id/tv_addr"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            style="@style/White_TextView16_Style"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/view_addr"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_99767B99"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_0.5dp"></View>

    <RelativeLayout
        android:id="@+id/rl_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp_10"
            android:text="手续费"
            style="@style/Auth_TextView16_Style"></TextView>
        <TextView
            android:id="@+id/tv_fee"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            style="@style/White_TextView16_Style"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/view_fee"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_99767B99"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_0.5dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txhash"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp_10"
            android:text="区块链交易ID"
            style="@style/Auth_TextView16_Style"></TextView>
        <TextView
            android:layout_toRightOf="@+id/txhash"
            android:id="@+id/tv_id"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            style="@style/White_TextView16_Style"></TextView>
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_99767B99"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_0.5dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp_10"
            android:text="时间"
            style="@style/Auth_TextView16_Style"></TextView>
        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            style="@style/White_TextView16_Style"></TextView>
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_99767B99"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_0.5dp"></View>


        <TextView
            android:id="@+id/tv_cancel_withdraw"
            android:layout_margin="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@color/color_4B8BEB"
            android:text="@string/Cancel_Withdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"></TextView>
</LinearLayout>