<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#1A1C29"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.temp.buda.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/icon_common_back"
        app:titleText="@string/Recharge_Info"
        app:titleTextColor="@color/color_FFFFFFFF" />
    <LinearLayout
        android:background="@color/color_FF282C42"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_weight="3"
        android:layout_width="0dip"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            style="@style/Auth_TextView_Style"
            android:text="@string/usdt_price" />

        <TextView
            android:id="@+id/tv_price"
            android:text="加载中..."
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            style="@style/White_TextView_Style"
            />
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_weight="3"
        android:layout_width="0dip"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:text="x"
            style="@style/Auth_TextView_Style"></TextView>

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/buy_num"
            android:layout_gravity="center_horizontal"
            style="@style/Auth_TextView_Style"
            android:text="@string/buy_num" />
        <TextView
            android:id="@+id/tv_buy_num"
            android:text="加载中..."
            android:layout_below="@+id/buy_num"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            style="@style/White_TextView_Style"
            />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_weight="4"
        android:layout_width="0dip"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="="
            style="@style/Auth_TextView_Style"></TextView>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/amount"
            android:layout_gravity="center_horizontal"
            style="@style/Auth_TextView_Style"
            android:text="@string/amount" />
        <TextView
            android:id="@+id/tv_amount"
            android:text="加载中..."
            android:layout_below="@+id/amount"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            style="@style/Orange_TextView_Style"
            />
    </RelativeLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="@color/color_FF282C42"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            style="@style/Auth_TextView_Style"
            android:text="@string/starTime" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_startime"
            android:layout_marginRight="10dp"
            style="@style/Auth_TextView_Style"
            android:text="加载中..." />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@drawable/shape_input_buttom_line" />
    <RelativeLayout
        android:padding="15dp"
        android:background="@color/color_FF282C42"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            style="@style/Auth_TextView_Style"
            android:text="@string/endTime" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_endtime"
            android:layout_marginRight="10dp"
            style="@style/Auth_TextView_Style"
            android:text="加载中..." />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@drawable/shape_input_buttom_line" />
    <RelativeLayout
        android:padding="15dp"
        android:background="@color/color_FF282C42"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            style="@style/Auth_TextView_Style"
            android:text="@string/orderStatus" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_orderstatus"
            android:layout_marginRight="10dp"
            style="@style/Auth_TextView_Style"
            android:text="加载中..." />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@drawable/shape_input_buttom_line" />
</LinearLayout>